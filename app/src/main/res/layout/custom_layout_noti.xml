<LinearLayout android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_marginLeft="10dp"
        app:cardElevation="4dp"
        app:cardCornerRadius="5dp"
        android:layout_marginTop="3dp"
        android:translationZ="4dp"
        android:layout_marginBottom="8dp"
        android:layout_marginRight="10dp"
        android:layout_height="match_parent"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >
            <androidx.cardview.widget.CardView
                android:layout_width="70dp"
                app:cardCornerRadius="8dp"
                android:id="@+id/imgbg"
                android:layout_alignParentLeft="true"
                android:layout_height="70dp"
                >
                <ImageView
                    android:id="@+id/image"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:src="@drawable/banner3"/>
            </androidx.cardview.widget.CardView>
            <TextView
                android:fontFamily="@font/abhaya_libre_semibold"
                android:id="@+id/notification"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/imgbg"
                android:text="Hello Parvej ! Dr. Ravi Bhaskar has posted a notification May be it is For you... "
                android:layout_centerHorizontal="true"
                android:layout_margin="10dp"/>
            <View
                android:id="@+id/exp"
                android:layout_width="130dp"
                android:layout_height="2dp"
                android:layout_marginTop="4dp"
                android:background="@color/black"
                android:layout_below="@id/notification"
                android:layout_toRightOf="@id/imgbg"
                android:layout_marginLeft="30dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/notification"
                android:layout_marginLeft="14dp"
                android:layout_marginTop="-8dp"
                android:layout_toRightOf="@id/exp"
                android:fontFamily="@font/lustria"
                android:text="Explore"
                android:textSize="16dp" />
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>