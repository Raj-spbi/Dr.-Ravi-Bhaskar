<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".fragments.PrivacyAndPolicy">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:textSize="26dp"
                android:fontFamily="@font/abhaya_libre_semibold"
                android:gravity="center"
                android:text="Privacy &amp; Policy"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:textStyle="bold" />

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                app:cardCornerRadius="5dp">

                <TextView
                    android:padding="8dp"
                    android:textColor="@color/black"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:fontFamily="@font/lustria"
                    android:layout_gravity="center"
                    android:text="@string/policy"/>

            </androidx.cardview.widget.CardView>

<LinearLayout
    android:layout_width="match_parent"
    android:layout_gravity="center"
    android:gravity="center"
    android:padding="10dp"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="1. INFORMATION WE MAY COLLECT FROM YOU"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:alpha=".9"
        android:textSize="15dp"
        android:textColor="@color/black"
        android:fontFamily="@font/lustria"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="2. IP ADDRESSES AND COOKIES"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:textColor="@color/black"
        android:alpha=".9"
        android:layout_marginRight="10dp"
        android:textSize="15dp"
        android:fontFamily="@font/lustria"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="3. WHERE WE STORE YOUR PERSONAL DATA"
        android:layout_marginLeft="10dp"

        android:layout_marginRight="10dp"
        android:textColor="@color/black"
        android:alpha=".9"
        android:layout_marginTop="5dp"
        android:textSize="15dp"
        android:fontFamily="@font/lustria"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="4. USES MADE OF THE INFORMATION"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="5dp"
        android:textSize="15dp"
        android:textColor="@color/black"
        android:alpha=".9"
        android:fontFamily="@font/lustria"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="5. DISCLOSURE OF YOUR INFORMATION"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="5dp"
        android:textColor="@color/black"
        android:alpha=".9"
        android:textSize="15dp"
        android:fontFamily="@font/lustria"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="6. YOUR RIGHTS AND CONTACT"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="5dp"
        android:textSize="15dp"
        android:textColor="@color/black"
        android:alpha=".9"
        android:fontFamily="@font/lustria"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="7. CHANGES TO OUR PRIVACY POLICY"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="5dp"
        android:textSize="15dp"
        android:textColor="@color/black"
        android:alpha=".9"
        android:fontFamily="@font/lustria"/>

</LinearLayout>
            <com.skydoves.elasticviews.ElasticButton
                android:layout_width="wrap_content"
                android:layout_height="34dp"
                android:layout_gravity="right"
                android:layout_marginRight="30dp"
                android:layout_marginBottom="10dp"
                android:text="Read More"
                android:layout_marginTop="15dp"
                android:paddingLeft="12dp"
                android:paddingRight="12dp"
                android:textSize="12sp"
                android:id="@+id/btn_readMore"
                android:textColor="@color/white"
                android:background="@drawable/btn_back"/>

        </LinearLayout>
    </ScrollView>

</LinearLayout>